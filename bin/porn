#!/usr/bin/bash
# Run movies from specific category

if [[ "$1" == "--new" ]]; then
  FILES=$(ssh ai@susedko.local find /var/mnt/vault/ai/New/ -maxdepth 1 -type f ! -name "*.part" -printf '__START__%p__END__' | sed 's/"/\\"/g' | sed 's/__START__/"sftp:\/\/ai@susedko.local:/g' | sed 's/__END__/" /g')
  bash -c "mpv --shuffle --fullscreen $FILES"
else
  find /home/ai/Vídeos/Erótica/ -type f -exec mpv --shuffle --fullscreen {} +
fi
